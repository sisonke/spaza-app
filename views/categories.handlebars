<h1>Category List</h1>
<a href="/categories/add">Add Category</a>


{{#no_products}}
  <p>No products available yet. Add some above.</p>
{{/no_products}}

<div class="rows">
  <table class="table table-bordered">
    <thead>

      <tr>
        <th>Category</th>
        <th>Edit/Delete</th>

      </tr>
    </thead>
    <tbody>
      {{#categories}}
        <tr>
          <td>{{category_name}}</td>
          <td> <a href="/categories/edit/{{id}}">Edit</a>
            <a href="/categories/delete/{{id}}">Delete</a></td>
        </tr>
      {{/categories}}
    </tbody>
  </table>

</div>
