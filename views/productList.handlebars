<div class="sisonke">
	<h1>Add A Product</h1>

	<form action="/products/add" method="POST">
		product_name:
		<input type="text" name="product_name" value="{{product_name}}">
		<select name="category_id">
			{{#categories}}
				<option value="{{id}}">{{category_name}}
				</option>
			{{/categories}}
		</select>
		<input type="submit">
	</form>
</div>

<div class="col-md-8">
<h1>Products</h1>
<form class="navbar-form navbar-left" role="search" action="/products/search" method="post">
  <div class="form-group">
    <input type="text" class="form-control" placeholder= "search..." id ="search" name="searchValue">
  </div>
    <!-- <button type="submit" class="btn btn-default">Submit</button> -->
</form>

{{#no_products}}
  <p>No products available yet. Add some above.</p>
{{/no_products}}


<table class="table table-hover"  id ="products">
  <tr>
    <thead>

      <th>product name</th>
      {{#if admin}}
      <th>Edit</th>
      <th>Delete</th>
      {{/if}}
    </thead>

  </tr>
  <tbody>
    {{#products}}
      <tr>

        <td>{{product_name}}</td>
              {{#if ../admin}}
        <td><a href="/products/edit/{{id}}"><span class="glyphicon glyphicon-pencil"></span></a></td>
        <td><a href="/products/delete/{{id}}"><span class="glyphicon glyphicon-trash"></span></a></td>
          {{/if}}
      </tr>
    {{/products}}
  </tbody>
</table>
</div>
